@{
	ViewBag.Title = "Coach";
	List<int> LCI = new List<int>() {};
	List<string> LCN = new List<string>() { };
	List<string> LCT = new List<string>() { };


	foreach (var item in @ViewBag.LessionCategory){
		LCI.Add(@item.LcId);
		LCN.Add(@item.LcName);
		LCT.Add(@item.LcType);
	}
}
