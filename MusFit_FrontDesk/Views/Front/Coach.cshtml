<style>
	    .ml5 {
  position: relative;
  font-weight: 300;
  font-size: 4.5em;
  color: #402d2d;
}

.ml5 .text-wrapper {
  position: relative;
  display: inline-block;
  padding-top: 0.1em;
  padding-right: 0.05em;
  padding-bottom: 0.15em;
  line-height: 1em;
}

.ml5 .line {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  height: 1px;
  width: 100%;
  background-color: #D39080;
  transform-origin: 0.5 0;
}

.ml5 .ampersand {
  font-family: Baskerville, serif;
  font-style: italic;
  font-weight: 400;
  width: 1em;
  margin-right: -0.1em;
  margin-left: -0.1em;
}

.ml5 .letters {
  display: inline-block;
  opacity: 0;
}

.box{
	width: 200px;
	height: 200px;
	overflow: hidden;
}
.box img{
	width: 200px;
	height: 200px;
	border-radius:50%;
	object-fit: cover;
}


</style>


<body>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>


<div class="see">
    <div style="display: flex; justify-content: center; 
                align-items: center;
                height:  300px;
                background-size: 100% auto;
                background-image: linear-gradient(to top, rgb(255, 255, 255),rgba(255, 255, 255, 0.1),rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0));
                "> 
                    <span class="ml5" style="color:#753b2d;
                       font-family: 'GenSenRounded';font-size:3em">
                      <span class="text-wrapper">
                        <span class="line line1"></span>
                        <span class="letters letters-left">教 練</span>
                        @*<span class="letters ampersand"></span>*@
                        <span class="letters letters-right">介 紹</span>
                        <span class="line line2"></span>
                      </span>
                    </span>
                  </div>
                </div>

	<div class="main" style="margin-top: 10vh; "data-aos="fade-up" data-aos-duration="1400" data-aos-delay="700">
		<div class="slider slider-nav center">
			
			@{
				var i = 1;
				string j = "";

				foreach (var item in @ViewBag.Coach)
				{

					if(item.EPhoto!=null){
						j = "data:image/jpeg;base64," + item.EPhoto;
					}else{
					 j = "../image/avatar/default" + i +".png";
						i++;
					}
						<div style="position: relative;">
						<span class="coach-text">
						@item.EEngName
						</span>
						<div class="box">
						<img class="coach-img" 
						style="" src=@j alt="">  
						</div>
						</div>
					if(i==5){
						i = 1;
					}
				}
			}
			<div style="position: relative;">
            <span class="class-text">
            </span>
            <img class="class-img" style="width: 600px; height:200px"
                src="../image/transparent.png" alt="">
        </div>


		</div>
		<div class="slider slider-for" style="width: 100%;">
			@{
				foreach (var item in @ViewBag.Coach)
				{
						<div class="coach-text2">
						<span style="white-space:pre-line; ">
						@item.EExplain
						</span>
						<br>
						專長：
						@{foreach (var item2 in @ViewBag.CoachSpecial)
					{
						

						if (@item.EId ==@item2.EId)
						{
										<br>
								int a = Convert.ToInt32(@item2.LcId);
										@LCN[a-1];
										<span>(@LCT[a-1])</span>
								
								
						}
						
					}
						}
				

					</div>
				}
			}
			<div class="class-text2"></div>

		</div>

	</div>

</body>


<script src="../js/title.js"></script>
<script>


	$('.slider-nav').slick({
		centerMode: true,
		slidesToScroll: 1,
		asNavFor: '.slider-for',
		dots: false,
		centerMode: true,
		focusOnSelect: true,
		responsive: [
			{
				breakpoint: 9999,
				settings: {
					slidesToShow: 5
				}
			},
			{
				breakpoint: 1080,
				settings: {
					slidesToShow: 3
				}
			},
			{
				breakpoint: 768,
				settings: {
					slidesToShow: 3
				}
			}
		]

	});
	$('.slider-for').slick({
		centerMode: true,
		slidesToShow: 1,
		slidesToScroll: 1,
		arrows: false,
		fade: true,
		asNavFor: '.slider-nav',
		autoplay: false,
		autoplaySpeed: 5000,

	});




	$('a[data-slide]').click(function (e) {
		e.preventDefault();
		var slideno = $(this).data('slide');
		$('.slider-nav').slick('slickGoTo', slideno - 1);
	});
	AOS.init();
</script>

