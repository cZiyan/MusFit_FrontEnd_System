@model MusFit_FrontDesk.ViewModels.ResetPasswordViewModel
@{
    var messageNew = (string)ViewData["errorNew"] ?? string.Empty;
}
<head>
    <title>重設密碼 | MusFit - 享受生活</title>
</head>


<link rel="stylesheet" href="~/css/Reset_Password.css">


<div class="container-fluid">
    <form method="post" action="@Url.Action("ResetPassword","Front")">
        <div class="reset_password container-fluid">
            <div class="row ">
                <div class="col-3"></div>
                <div class="col-6 ">
                    <div class="col-12"></div>
                    <div class="col-12 mt-5">
                        <h4 class="text-center" style="margin-top:100px;">重設密碼</h4>
                    </div>
                    <hr>
                    <div class="form-group row justify-content-center">
                        <label class="col-sm-3 col-form-label" asp-for="NewPassword" onclick=EditPassword()>新密碼</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="NewPassword"
                                   name="NewPassword" type="password" />
                            <span class="field-validation-valid text-danger" data-valmsg-for="NewPassword"
                                  data-valmsg-replace="true" asp-validation-for="NewPassword"></span>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <label class="col-sm-3 col-form-label" asp-for="CheckPassword">確認密碼</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="CheckPassword"
                                   name="CheckPassword" type="password" />
                            <span class="field-validation-valid text-danger" data-valmsg-for="CheckPassword"
                                  data-valmsg-replace="true" asp-validation-for="CheckPassword"></span>
                            @{
                                                               
                                if (messageNew != "")
                                {
                                        <br><span id="error" style="color: red">@(messageNew)</span>
                                }
                                
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3 btnEdit">
                <div class="col-7"></div>
                <div class="col">
                    <button type="submit" class="btn btnCheck mb-5" style="background-color: #737576;color: white;width: 100px">
                        儲存
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>


<script>
    //一鍵加入
    function EditPassword() {
        $('input[id="NewPassword"]').val('A123456');
        $('input[id="CheckPassword"]').val('A123456');
    }


</script>
